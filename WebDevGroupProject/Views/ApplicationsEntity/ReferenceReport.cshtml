@model IEnumerable<WebDevGroupProject.ViewModels.ReferenceReportViewModel>

@{
    ViewData["Title"] = "ReferenceReport";
}

<h1>Applicant Reference Report</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <sortable-link asp-action="ReferenceReport" query-options="ViewBag.QueryOptions" sort-field="ApplicantID">
                    @Html.DisplayNameFor(model => model.ApplicantID)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="ReferenceReport" query-options="ViewBag.QueryOptions" sort-field="ApplicantFirstName">
                    @Html.DisplayNameFor(model => model.ApplicantFirstName)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="ReferenceReport" query-options="ViewBag.QueryOptions" sort-field="ApplicantLastName">
                    @Html.DisplayNameFor(model => model.ApplicantLastName)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="ReferenceReport" query-options="ViewBag.QueryOptions" sort-field="ReferenceFirstName">
                    @Html.DisplayNameFor(model => model.ReferenceFirstName)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="ReferenceReport" query-options="ViewBag.QueryOptions" sort-field="ReferenceLastName">
                    @Html.DisplayNameFor(model => model.ReferenceLastName)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="ReferenceReport" query-options="ViewBag.QueryOptions" sort-field="ReferenceRelationship">
                    @Html.DisplayNameFor(model => model.ReferenceRelationship)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="ReferenceReport" query-options="ViewBag.QueryOptions" sort-field="ReferenceEmailAddress">
                    @Html.DisplayNameFor(model => model.ReferenceEmailAddress)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="ReferenceReport" query-options="ViewBag.QueryOptions" sort-field="ReferencePhoneNumber">
                    @Html.DisplayNameFor(model => model.ReferencePhoneNumber)
                </sortable-link>
</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicantID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicantFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicantLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceRelationship)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferenceEmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferencePhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
