            <th>
                <sortable-link asp-action="HonorsReport" query-options="ViewBag.QueryOptions" sort-field="SAT">
                    @Html.DisplayNameFor(model => model.SAT)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="HonorsReport" query-options="ViewBag.QueryOptions" sort-field="ACT">
                    @Html.DisplayNameFor(model => model.ACT)
                </sortable-link>
            </th>
            <th>
                <sortable-link asp-action="HonorsReport" query-options="ViewBag.QueryOptions" sort-field="ApplicantFirstName">
