}

<h1>Honors Report</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <sortable-link asp-action="HonorsReport" query-options="ViewBag.QueryOptions" sort-field="ApplicantID">
